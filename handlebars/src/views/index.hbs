<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Plantilla Handlebars</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
    />
     <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">
  </head>
  <body>
    <header class="container">
      <nav class="navbar py-4">
        <a href="/" class="navbar-brand">Icono</a>
        <div  class="">
          <ul class="navbar-nav d-flex flex-row justify-content-evenly">
        <li class="nav-item me-3">
          <a class="nav-link " aria-current="page" href="/agregar">Agregar Productos</a>
        </li>
         <li class="nav-item me-3">
          <a class="nav-link" aria-current="page" href="/productos">Productos</a>
        </li>
        </div>
      </nav>
    </header>
    <main>
      <section>
        <h2 class="text-center">Agregar productos</h2>
        <div class="mx-4">
         {{>formulario}}
        </div>
      </section>
      <section>
        <h2 class="text-center">Productos</h2>
{{#if products}}
  <div class="col-md-6 offset-3 mt-4">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Titulo</th>
          <th scope="col">Precio</th>
          <th scope="col">Imagen</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <th>{{this.id}}</th>
            <td>{{this.title}}</td>
            <td>$ {{this.price}}</td>
            <td>{{this.thumbnail}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <h2 class="text-center">No existen productos</h2>
{{/if}}
      </section>
      <section>
        <h3>Chat</h3>
        <form >
        <input type="email" name="email" id="email" placeholder="Email">
        <textarea name="text" id="text" cols="30" rows="10"></textarea>

        </form>

        <table>
          <thead>
            <th scope="col">Usuario</th>
            <th scope="col">Titulo</th>
            <th scope="col">Precio</th>
            <th scope="col">Imagen</th>
          </thead>
        </table>
      </section>

    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>